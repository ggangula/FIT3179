{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Price based on Dwelling Type",
  "background": "azure",
  "width": "container",
  "height": 270,
  "data": {
    "url": "https://raw.githubusercontent.com/ggangula/FIT3179/main/Melbourne%20Housing.csv"
  },
  "encoding": {
    "x": {"field": "Type",
    "axis": {"labelAngle": 0}},
    "y": {
      "aggregate": "median",
      "field": "Price",
      "axis": {"title": "Median Price ($)", "labelAngle": 0},
      "scale": {"type": "linear"}
    },
    "color": {
      "field": "Type",
      "type": "nominal",
      "scale": {
        "domain": ["House", "Townhouse", "Unit"],
        "range": ["#7fcdbb", "#41b6c4", "#0c2c84"]
      }
    },
    "tooltip": [
      {"field": "Type", "type": "nominal"},
      {
        "aggregate": "median",
        "field": "Price",
        "title": "Median Price",
        "type": "quantitative",
        "format": "$,"
      }
    ]
  },
  "layer": [
    {"mark": "bar"},
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "line-bottom",
        "dx": 4
      },
      "encoding": {
        "text": {
          "aggregate": "median",
          "field": "Price",
          "type": "quantitative",
          "format": "$,"
        }
      }
    }
  ],
   "config": {
        "view": {
            "stroke": null
        },
        "axis": {
            "labelFont": "Oxygen",
            "titleFont": "Oxygen"
        },
        "legend": {
            "labelFont": "Oxygen",
            "titleFont": "Oxygen"
        },
        "header": {
            "labelFont": "Oxygen",
            "titleFont": "Oxygen"
        },
        "title": {
            "font": "Oxygen",
            "fontSize": 16,
            "fontWeight": 600
        }
    }
}
