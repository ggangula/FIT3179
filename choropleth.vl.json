{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 400,
  "title": "Average Price of Housing in Melbourne",
  "projection": {
    "type": "conicEqualArea",
    "parallels": [-36, -38],
    "rotate": [-145, 0, 0]
  },
  "params": [
    {
      "name": "AveragePriceLGA",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 3000000,
        "step": 100000,
        "name": "Minimum Average Price: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ggangula/FIT3179/main/vic.topojson",
        "format": {"type": "topojson", "feature": "collection"}
      },
      "transform": [
        {
          "lookup": "properties.vic_lga__3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ggangula/FIT3179/main/Melbourne%20Housing.csv"
            },
            "key": "CouncilArea",
            "fields": ["AveragePriceLGA", "Regionname"]
          }
        },
        {"calculate": "datum.AveragePriceLGA + 0", "as": "AveragePriceLGA_new"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "AveragePriceLGA_new",
          "type": "quantitative",
          "title": "Average Price"
        },
        "tooltip": [
          {
            "field": "properties.vic_lga__3",
            "type": "nominal",
            "title": "Local Government Area"
          },
          {
            "field": "AveragePriceLGA",
            "type": "quantitative",
            "title": "Average Price",
            "format": "$,"
          },
          {"field": "Regionname", "type": "nominal", "title": "Region"}
        ]
      }
    }
  ]
}